<% layout('layouts/master') -%>

<div class="container">

  <form action="/login" method="post">

    <div class="row">
      <div class="col-md-5 offset-md-3 p-2">
        <h1>Login</h1>
        <hr>

        <div class="form-group row mb-2">
          <label for="email" class="col-form-label d-block">Email</label>
          <input class="form-control" type="email" name="username" placeholder="Your Email" id="email">
        </div>

        <div class="form-group row mb-2">
          <label for="password" class="col-form-label d-block">Password</label>
          <input class="form-control" name="password" type="password" placeholder="Your Password" id="password">
        </div>

        <button type="submit" class="btn btn-primary">Login</button>

        <br>

        <a href="/forgot-password">Forgot Password?</a>
      </div>
    </div>

  </form>

</div>
